<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="8.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.ClientController">
   <children>
      <TextArea editable="false" promptText="Лог общения" />
      <TextField promptText="Введите команду" />
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onClickSendButton" text="Отправить" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
